FROM nginx:stable


# Install Node.js
RUN apt-get update && apt-get install -y curl gnupg && curl -sL https://deb.nodesource.com/setup_8.x | bash - && apt-get install -y nodejs && npm install npm@latest -g && apt-get clean

# RUN mkdir -p /var/www/static && chmod 755 /var/www/static
ADD app /opt/app

WORKDIR /opt/app

RUN npm install && npm run production

RUN mkdir -p /var/www/public && cp -r /opt/app/public /var/www/public


ADD nginx/vhost.conf.production /etc/nginx/conf.d/default.conf