FROM php:fpm

RUN docker-php-ext-install pdo_mysql
RUN apt-get update && apt-get install -y zip unzip gnupg libpng-dev && apt-get clean

WORKDIR /var/www

# Install Composer
RUN curl -sL https://raw.githubusercontent.com/composer/getcomposer.org/fe44bd5b10b89fbe7e7fc70e99e5d1a344a683dd/web/installer | php -- --quiet

# Install Node.js
RUN curl -sL https://deb.nodesource.com/setup_8.x | bash - && apt-get install -y nodejs && npm install npm@latest -g