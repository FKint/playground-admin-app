FROM php:fpm

RUN docker-php-ext-install pdo_mysql
RUN apt-get update && apt-get install -y zip unzip gnupg libpng-dev && apt-get clean

WORKDIR /var/www

# Install Composer
RUN curl -sL https://raw.githubusercontent.com/composer/getcomposer.org/32c2c34883cf31c57e4729d1afaf09facad7615b/web/installer | php -- --quiet

# Install Node.js
RUN curl -sL https://deb.nodesource.com/setup_8.x | bash - && apt-get install -y nodejs