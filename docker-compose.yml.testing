version: '3'
services:
  # Laravel PHP container
  app:
    build:
      context: .
      dockerfile: dusk.Dockerfile.testing
    working_dir: /var/www
    volumes:
      - ./app/app:/var/www/app
      - ./app/resources:/var/www/resources
      - ./app/routes:/var/www/routes
      - ./app/tests:/var/www/tests
      - ./app/database:/var/www/database
      - "./app/storage/logs/laravel-testing.log:/var/www/storage/logs/laravel.log"
      - "./testing_scripts.sh:/var/www/testing_scripts.sh"
      - .laravel.env.dusk.example:/var/www/.env
      - .laravel.env.dusk.example:/var/www/.env.dusk.local
      - "./app/database/testing.sqlite:/var/www/database/testing.sqlite"
