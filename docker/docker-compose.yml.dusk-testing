version: '3.7'
services:
  # Laravel PHP container
  app-container:
    build:
      context: .
      dockerfile: docker/Dockerfile
      target: app-test
    command: php artisan serve --host=app-container
    working_dir: /var/www
    volumes:
      - ./app:/var/www:cached
      - .laravel.env.dusk.example:/var/www/.env
    depends_on:
      - selenium 
  selenium:
    image: selenium/standalone-chrome:3
    shm_size: 2gb
